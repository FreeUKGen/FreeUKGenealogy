{% extends '_layouts/main' %}

{% set titleBarEntry = craft.entries.section('blog').first() %}

{% set wrapWithCombs = true %}

{% if craft.request.getPageNum() != 1 %}
  {% set title = 'Page ' ~ craft.request.getPageNum() ~ ' - ' ~ (titleBarEntry.pageTitle is not empty ? titleBarEntry.pageTitle : titleBarEntry.title) %}
{% endif %}


{% block main %}

  {% include '_includes/title-bar' %}

  <div class="grid">

    <div class="grid__item  two-thirds  palm-one-whole">
      {% include 'blog/_includes/list' %}
    </div>

    <div class="grid__item  one-third  palm-one-whole">
        {% include 'blog/_includes/sidebar' %}
    </div>

  </div>

{% endblock %}
