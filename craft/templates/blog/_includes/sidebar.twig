{% set allBlogEntries = craft.entries({
  section : 'blogPost',
  limit : null
}) %}

{% set blogCats = craft.categories({
  relatedTo : allBlogEntries,
  group : 'blog',
  limit : null
}) %}

{% set sidebarEntry = sidebarWidget.sidebarEntry.first %}

<aside>

  {% if sidebarEntry %}<h2 class="title-block"><a href="{{ sidebarEntry.url }}">{{ sidebarEntry.title }}</a></h2>{% endif %}

  <div class="islet  islet--light">
    <p>{{ sidebarWidget.sidebarText }}</p>
  </div>

</aside>


{% if blogCats | length %}
<aside>

  <h2 class="title-block">Categories</h2>

  <ul class="boxed-nav">
    {% for cat in blogCats %}
    <li><a href="{{ cat.url }}">{{ cat.title }}</a></li>
    {% endfor %}
  </ul>

</aside>
{% endif %}


{% if allBlogEntries | length %}
<aside>

  <h2 class="title-block">Archive</h2>

  <ul class="boxed-nav">
  {% for yearMonth, entries in allBlogEntries | group("postDate|date('Y-m')") %}
    <li><a href="{{ url('blog/' ~ yearMonth | date('Y/m') ) }}">{{ yearMonth | date('F Y') }}</a></li>
  {% endfor %}
  </ul>

</aside>
{% endif %}


{% set tweet = craft.twitter.get('statuses/user_timeline', { count : 1 }) %}

{% if tweet | length %}

  {% set tweet = tweet[0] %}

  <aside class="twitter">

    <h2 class="twitter__title">Twitter <a href="https://twitter.com/intent/follow?user_id=2373584142" data-sc-popup>@FreeUKGen</a></h2>

    <p class="twitter__text">{{ tweet.text | autoLinkTweet }}</p>

    <ul class="twitter__tools">
      <li class="twitter__tools__follow"><a href="https://twitter.com/intent/follow?user_id=2373584142" data-sc-popup>Follow</a></li>
      <li><a href="https://twitter.com/intent/tweet?in_reply_to={{ tweet.id }}" data-sc-popup><i class="icon__reply" aria-hidden="true"></i><span class="accessibility">Reply</span></a></li>
      <li><a href="https://twitter.com/intent/retweet?tweet_id={{ tweet.id }}" data-sc-popup><i class="icon__repost" aria-hidden="true"></i><span class="accessibility">Retweet</span></a></li>
      <li><a href="https://twitter.com/intent/favorite?tweet_id={{ tweet.id }}" data-sc-popup><i class="icon__star" aria-hidden="true"></i><span class="accessibility">Favourite</span></a></li>
    </ul>

  </aside>

{% endif %}
