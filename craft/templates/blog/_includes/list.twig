{# need pagination #}

{% if criteria is not defined %}
  {% set criteria = {
    section : 'blogPost',
    limit : 4
  } %}
{% else %}
  {% set criteria = criteria | merge({
    section : 'blogPost',
    limit : 4
  }) %}
{% endif %}

<ul class="post-list">
{% for entry in craft.entries(criteria) %}
  <li>
    {% include 'blog/_includes/post' with { showSummary : true } %}
  </li>
{% endfor %}
</ul>
