{#
 # Quote block type
 #}
<div class="article__quote  grid__item  quote--{{ block.quoteSize }} {{ block.width }}  palm-one-whole">
  <blockquote class="blockquote">
    {{ block.quote }}
    {% if block.sourceHeading != '' and block.sourceUrl != '' %}
      <footer class="source"><a href="{{ block.sourceUrl }}">{{ block.sourceHeading }}</a></footer>
    {% elseif block.sourceHeading != '' %}
      <footer class="source">{{ block.sourceHeading }}</footer>
    {% elseif block.sourceUrl != '' %}
      <footer class="source">{{ block.sourceUrl }}</footer>
    {% endif %}
  </blockquote>
</div>