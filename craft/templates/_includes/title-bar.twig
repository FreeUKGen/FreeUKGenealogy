<div class="title-bar">

  {% if titleBarEntry is not defined and entry is defined %}
    {% set titleBarEntry = entry %}
  {% endif %}

  {% if titleBarEntry is defined %}<h1><a href="{{ titleBarEntry.url }}">{{ titleBarEntry.title }}</a></h1>{% endif %}

  {% include '_includes/breadcrumb' %}

  <ul class="social-links">
    <li><a href="#"><i class="icon__youtube" aria-hidden="true"></i><span class="accessibility">YouTube</span></a></li>
    <li><a href="#"><i class="icon__rss" aria-hidden="true"></i><span class="accessibility">RSS</span></a></li>
    <li><a href="#"><i class="icon__googleplus" aria-hidden="true"></i><span class="accessibility">Google+</span></a></li>
    <li><a href="#"><i class="icon__facebook" aria-hidden="true"></i><span class="accessibility">Facebook</span></a></li>
    <li><a href="#"><i class="icon__github" aria-hidden="true"></i><span class="accessibility">Github</span></a></li>
  </ul>

  <form action="{{ url('search') }}" method="get" class="search">
    <input type="search" name="q" value="" placeholder="Search">
    <button type="submit">
      <i class="icon__search" aria-hidden="true"></i>
      <span class="accessibility">Search</span>
    </button>
  </form>

</div>
